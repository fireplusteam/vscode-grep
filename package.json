{
  "publisher": "SaitoJP",
  "name": "vscode-grep",
  "displayName": "VSCode Grep",
  "description": "grep directory",
  "version": "0.0.2",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SaitoJP/vscode-grep"
  },
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.42.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vscode-grep.runGrep"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-grep.runGrep",
        "title": "grep: file using ripgrep to fzf"
      }
    ],
    "keybindings": [
      {
        "command": "vscode-grep.runGrep",
        "key": "ctrl+g"
      }
    ],
    "configuration": {
      "title": "vscode grep",
      "properties": {
        "vscode-grep.RipgrepDirPath": {
          "scope": "window",
          "type": "string",
          "default": "",
          "description": "Initial working directory for ripgrep"
        },
        "vscode-grep.FzfDirPath": {
          "scope": "window",
          "type": "string",
          "default": "",
          "description": "Initial working directory for fzf"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.1",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.42.0",
    "eslint": "^6.8.0",
    "@typescript-eslint/parser": "^2.18.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "glob": "^7.1.6",
    "mocha": "^7.0.1",
    "typescript": "^3.7.5",
    "vscode-test": "^1.3.0"
  }
}
